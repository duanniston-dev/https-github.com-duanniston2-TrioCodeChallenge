<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/core_nav"
    app:startDestination="@id/gameOnboardingFragment">

    <fragment
        android:id="@+id/gameOnboardingFragment"
        android:name="br.com.duannistontriocodechallenge.game.onboarding.application.GameOnboardingFragment"
        android:label="GameOnboardingFragment" >
        <action
            android:id="@+id/action_gameOnboardingFragment_to_gameBoardFragment"
            app:destination="@id/gameBoardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_gameOnboardingFragment_to_gameScoreFragment"
            app:destination="@id/gameScoreFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/gameBoardFragment"
        android:name="br.com.duannistontriocodechallenge.game.board.application.GameBoardFragment"
        android:label="GameBoardFragment" />
    <fragment
        android:id="@+id/gameScoreFragment"
        android:name="br.com.duannistontriocodechallenge.game.score.application.GameScoreFragment"
        android:label="GameScoreFragment" />
</navigation>